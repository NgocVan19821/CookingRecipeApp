<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingHorizontal="20dp"
    tools:context=".feature.home.HomeActivity">

    <ImageButton
        android:id="@+id/q"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_leftbar" />

    <TextView
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/q"
        android:text="What would you\nlike to Cook?"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search"
        android:background="@drawable/bg_corners_white"
        android:drawableLeft="@drawable/ic_search"
        android:hint="Search for your query"
        android:textColor="@color/black"
        android:textColorHint="#4A4A4A" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today recipe"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="250dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_dish1" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/bg_corners_blur"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Penne pasta\ntomato"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textStyle="bold"


                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:text="30 MIN"
                                android:textColor="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:text="EASY"
                                android:textColor="@color/white" />


                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="5dp"

                            android:background="@drawable/bg_corners_blur"
                            android:drawableLeft="@drawable/ic_star"
                            android:padding="5dp"
                            android:text="4.8"
                            android:textColor="@color/white"
                            android:textStyle="bold" />


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="250dp"
                        android:layout_marginStart="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_dish2" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/bg_corners_blur"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Stuffed with\nchicken"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textStyle="bold"


                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:text="40 MIN"
                                android:textColor="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:text="MEDIUM"
                                android:textColor="@color/white" />


                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="5dp"

                            android:background="@drawable/bg_corners_blur"
                            android:drawableLeft="@drawable/ic_star"
                            android:padding="5dp"
                            android:text="5.0"
                            android:textColor="@color/white"
                            android:textStyle="bold" />


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="250dp"
                        android:layout_marginStart="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_dish1" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/bg_corners_blur"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Penne pasta\ntomato"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textStyle="bold"


                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:text="30 MIN"
                                android:textColor="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:text="EASY"
                                android:textColor="@color/white" />


                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="5dp"

                            android:background="@drawable/bg_corners_blur"
                            android:drawableLeft="@drawable/ic_star"
                            android:padding="5dp"
                            android:text="4.8"
                            android:textColor="@color/white"
                            android:textStyle="bold" />


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="250dp"
                        android:layout_marginStart="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_dish1" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/bg_corners_blur"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Penne pasta\ntomato"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textStyle="bold"


                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:text="30 MIN"
                                android:textColor="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:text="EASY"
                                android:textColor="@color/white" />


                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="5dp"

                            android:background="@drawable/bg_corners_blur"
                            android:drawableLeft="@drawable/ic_star"
                            android:padding="5dp"
                            android:text="4.8"
                            android:textColor="@color/white"
                            android:textStyle="bold" />


                    </RelativeLayout>




                </LinearLayout>

            </ScrollView>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>