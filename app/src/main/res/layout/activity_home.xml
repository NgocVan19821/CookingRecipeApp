                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/bg_corners_blur"
                            android:drawableLeft="@drawable/ic_star"
                            android:padding="5dp"
                            android:text="4.8"
